#top-menu ul li a:active, #top-menu ul li a:hover {
  color: #336699;
  text-decoration: underline;
}

/* main part */
#main {
  width: 942px;
  height: 486px;
  background: #f8f8f8;
  border: 1px solid red;
  float: left;
  margin-top: 10px;
  margin-left: 10px;
}

/* main left-menu part */
#left-menu {
  width: 176px;
  font-size: 14px;
  float: left;
  border: 2px solid #336699;
}
#left-menu p {
  height: 30px;
  background-color: #336699;
  color: #f8f8f8;
  font-size: 18px;
  font-weight: bold;
  padding-left: 50px;
}

#left-menu ul {
  list-style: none;
}
#left-menu ul li {
  background: #CCCCCC url(images/left-menu-title-bg.png) no-repeat scroll right center;
  border-top: 0.5px solid #333;
}
#left-menu ul li a{
  display: block;
  color: gray;
  text-indent: 5px;
}
#left-menu ul li a:hover {
  background-color: #CCCCCC;
}
/* main news part */
#news {
  width: 500px;
  height: 150px;
  font-size: 13px;
  margin-right: 10px;
  border: 1px solid #666666;
  float: left;
}
#news h4 {
  font-size: 14px;
  text-indent: 5px;
  background: url(images/title-bg.gif) repeat scroll 0 0 transparent;
}
#news ul li {
  list-style: none;
  margin-left: 10px;
}
#news ul li span {
  margin-left: 10px;
  text-indent: 10px;
}
#news ul li a:active, #news ul li a:hover {
  text-decoration: underline;
  color: #333;
}

#activity {
  width: 226px;
  height: 150px;
  font-size: 13px;
  border: 1px solid #333;
  float: left;
}
#activity h4 {
  font-size: 14px;
  text-indent: 5px;
  background: url(images/title-bg.gif) repeat scroll 0 0 transparent;
}
#activity ul li {
  list-style: none;
  margin-left: 10px;
}
#activity ul li a:active, #activity ul li a:hover {
  text-decoration: underline;
  color: #333;
}

#content {
  width: 740px;
  border: 1px solid maroon;
  margin-left: 10px;
  float: left;
}
#introduction {
  margin: 10px 0 0 0;
  width: 510px;
  border: 1px solid #333;
  float: left;
}

#footer {
  width: 940px;
  height: 138px;
  border: 1px solid gray;
  float: left;
  margin-left: 10px;
  /*position: absolute;
  bottom: 0;

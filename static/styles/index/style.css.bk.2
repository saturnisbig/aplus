#header #top-menu {
  width: 758px;
  font-size: 14px;
  height: 80px;
  /*border: 1px dotted #226699;*/
  float: left;
}
#top-menu ul {
  list-style: none;
  margin: 30px 0 0 0;
}
#top-menu ul li:first-child {
  margin-left: 50px;
}
#top-menu ul li {
  /*display: inline;*/
  margin: 0 5px 0 5px;
  float:left;
}
#top-menu ul li a {
  color: #666666;
  font-weight: bold;
  display: block;
}
/*
